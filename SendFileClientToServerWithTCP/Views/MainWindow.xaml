<Window x:Class="SendFileClientToServerWithTCP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SendFileClientToServerWithTCP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid  >
        <StackPanel>
            <WrapPanel>
                <Button Command="{Binding ConnectBtn}" Content="Connect" FontSize="24" Width="250" Height="50"></Button>
                <Button Content="DisConnect" FontSize="24" Width="250" Height="50"></Button>
                <TextBox Name="NametxtBox" Width="290"></TextBox>
                <Button Command="{Binding SelectBtn}" Content="Select" FontSize="24" Width="250" Height="50"></Button>
            </WrapPanel>
        </StackPanel>
        
    </Grid>
</Window>
